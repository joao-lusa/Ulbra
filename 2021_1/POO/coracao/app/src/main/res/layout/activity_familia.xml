<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamiliaActivity">

    <TextView
        android:id="@+id/InfoFml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Informe se alguem da sua família teve alguma doença"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InfoFml">

        <RadioButton
            android:id="@+id/Fml1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFml"
            android:text="Nenhuma história conhecida de cardiopatia	" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/Fml2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFml"
            android:text="1 parente c/ doença cardiaca e mais de 60 anos	" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/Fml3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFml"
            android:text="2 parentes c/ doença cardiaca e mais de 60 anos	" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/Fml4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFml"
            android:text="1 parente c/ doença cardiaca e menos de 60 anos	" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/Fml5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFml"
            android:text="2 parente c/ doença cardiaca e menos de 60 anos	" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/Fml6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFml"
            android:text="3 parente c/ doença cardiaca e menos de 60 anos	" />
    </RadioGroup>

    <Button
        android:id="@+id/Btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Confirmar"
        android:onClick="Btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup7" />

</androidx.constraintlayout.widget.ConstraintLayout>